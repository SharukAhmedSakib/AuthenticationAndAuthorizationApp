@model LoginVIewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<form asp-controller="Account" asp-action="login" method="post">
    UserName : <input type="text" asp-for="UserName" /><br />
    Password : <input type="password" asp-for="Password" /><br />
    <input type="checkbox" asp-for="RememberMe" />Remember Me<br />
    <input type="submit" value="Login" /><br />
    <a asp-controller="Account" asp-action="ForgotPassword">Forgot Password</a>
</form>

