@model AuthenticationAndAuthourizationApp.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<form asp-controller="Account" asp-action="Register" method="post">
    UserName : <input type="text" asp-for="UserName" /><br />
    Email : <input type="email" asp-for="Email" /><br />
    Password : <input type="password" asp-for="Password" /><br />
    Confirm Password : <input type="password" asp-for="ConfirmPassword" /><br />
    <input type="submit" value="Register" />
</form>